@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Parking Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .parking-btn {
            margin-top: 10px;
            width: 100%;
            padding-top: 20px;
            padding-bottom: 20px;
            height: 50px; /* Or however tall you want */
            display: flex;
            align-items: center;
            font-size: 1.2rem; /* Optional: increase text size */
        }

        body {
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 300px;
            background-color: #2c3e50;
            color: white;
            padding: 15px;
        }

        .content {
            flex: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .sidebar h6 {
            font-size: 0.9rem;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .parking-item {
            display: flex;
            justify-content: space-between;
            padding: 6px 10px;
            background-color: #34495e;
            margin-bottom: 5px;
            border-radius: 4px;
        }

        .home-btn {
            margin-top: 10px;
            padding-top: 20px;
            padding-bottom: 20px;
            height: 25px; /* Or however tall you want */
            width: 100px;
            display: table-row;
            align-items: center;
            font-size: 1.2rem; /* Optional: increase text size */
        }

        .add-btn {
            margin-top: 10px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a class="btn btn-success w-100 mb-3" asp-controller="Home" asp-action="Index">Меню</a>

        <h6>Паркинг / Локация</h6>

        <div id="parking-sidebar">
            <!-- AJAX will load sidebar content here -->
            <p></p>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <!-- jQuery (for AJAX) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function loadSidebar() {
            $.get("/Home/LoadSidebar", function (html) {
                $("#parking-sidebar").html(html);
            });
        }

        $(document).ready(function () {
            loadSidebar();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

