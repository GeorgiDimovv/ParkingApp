@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Main Menu</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/images/CleanBackground.png'); /* Replace with your image path */
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            font-size: 4rem;
            background-color: rgba(0, 0, 0, 0);
            padding: 20px 40px;
            border-radius: 12px;
            margin-bottom: 40px;
        }

        .menu-button {
            font-size: 1.5rem;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.8);
            color: #000;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

            .menu-button:hover {
                background-color: rgba(255, 255, 255, 1);
            }
    </style>
</head>
<body>
    <h1>Паркинг</h1>
    <a class="menu-button" href="/Home/Index">Влез</a>
</body>
</html>
